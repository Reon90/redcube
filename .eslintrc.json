{
    "parser": "typescript-eslint-parser",
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-undef": "off",
        "no-redeclare": [
            "error"
        ],
        "no-unused-vars": [
            "error"
        ],
        "no-console": [
            "off"
        ],
        "no-unreachable": [
            "error"
        ],
        "no-empty": [
            "error"
        ],
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        "brace-style": [
            "error",
            "1tbs"
        ],
        "no-multi-spaces": [
            "error"
        ],
        "space-before-blocks": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "space-infix-ops": [
            "error"
        ],
        "space-unary-ops": [
            "error"
        ],
        "comma-spacing": [
            "error",
            { "before": false, "after": true }
        ],
        "key-spacing": [
            "error", { "afterColon": true }
        ],
        "keyword-spacing": [
            "error",
            { "before": true }
        ],
        "arrow-spacing": [
            "error",
            { "before": true, "after": true }
        ],
        "eqeqeq": [
            "error"
        ],
        "no-var": "error",
        "prefer-arrow-callback": "error",
        "prefer-template": "error",
        "prefer-destructuring": "error",
        "prefer-const": "error",
        "prefer-rest-params": "error",
        "prefer-spread": "error"
    }
}